#!/usr/bin/ruby

require 'yaml'
require 'open4'
require 'rubytui'
include RubyTUI

class HardDrive
  MODULES = %w[ide_core ide_disk ide_generic]
  PASSED = 0
  FAILED = 1
  UNTESTED = 2

  def HardDrive.scan
    # :TODO: check for and load the modules?
    Dir.open('/sys/block').find_all {|dev|
      /^[sh]d[a-z]/.match(dev) and
      `cat /sys/block/#{dev}/removable`.chomp == '0'
    }.map {|dev| HardDrive.new(dev)}
  end

  def initialize(dev)
    @dev = dev
    @testing = false
    @status = UNTESTED
    @log = []
    @size = `cat /sys/block/#{dev}/size`.chomp.to_i * 512
    @started = @finished = nil
  end
  attr_reader :dev, :size
  attr_accessor :testing, :log
  attr_writer :status

  def run_tests
    return if @testing
    @testing = true
    @started = Time.new
    @thread = Thread.new(self) {|drive|
      if(drive.smart &&
         drive.badblocks &&
         drive.smart &&
         drive.wipe &&
         drive.smart)
        drive.status = PASSED 
      end
      drive.testing = false
      @finished = Time.new
    }
    @thread.abort_on_exception = true
    return @thread
  end

  def smart
    log << "smart test started"
    if ! system('/usr/sbin/smartctl', '-q', 'silent', '--all', dev)
      log << "smart test returned: '#{$?.exitstatus}'"
      if $?.exitstatus > 4
        @status = FAILED
        return false
      end
    end
    log << "smart test passed"
    return true
  end

  def badblocks
    log << "badblocks test started"
    log << ""
    buff = ""
    # progress comes in through err, bad blocks are reported on out
    #bbpid, bbin, bbout, bberr = Open4.popen4("#{File.dirname(__FILE__)}/fake_badblocks -c 1024 -s /dev/#{dev}")
    #bbpid, bbin, bbout, bberr = Open4.popen4("/sbin/badblocks -c 1024 -s /dev/#{dev}")
    bbpid, bbin, bbout, bberr = Open4.popen4("/sbin/badblocks -c 1024 -swt 0xffffffff /dev/#{dev}")
    bbout.sync = bberr.sync = true
    until bberr.closed? or bberr.eof?
      reads, writes, errs = IO.select([bbout, bberr], nil, nil, 1)
      if reads
        progress = reads.include?(bberr) ? bberr : nil
        sectors = reads.include?(bbout) ? bbout : nil
      end
      done, total = nil
      if sectors and ! sectors.eof?
        buff = sectors.read_nonblock(1000, buff)
        # :TODO: find out what this means for sure
        @status = FAILED
        curr = log[-1]
        log[-1] = "badblocks reports failures"
        log << curr
        buff.replace("")
      end
      if progress and ! progress.closed?
        until( (done and total) or bberr.eof? )
          buff = progress.read_nonblock(1000, buff)
          done, total = buff.scan( %r,(\d+)\s*/\s*(\d+)[^\d]+, )[0]
        end
        if done and total and (total.to_i >= done.to_i)
          log[-1] = "#{(done.to_i * 100) / total.to_i}% of badblocks scan complete"
        end
        buff.replace("")
      end
      if @status == FAILED
        [bbin, bbout, bberr].each {|io| io.close}
        Process.kill("INT", bbpid)
        break
      end
    end
    if Process::waitpid2(bbpid)[1].exitstatus.nonzero?
      @log << "badblocks failed"
      @status = FAILED
    end
    return @status != FAILED
  end # def badblocks

  ZEROS = "\0" * (1024 * 1024)
  open('/dev/urandom') {|urand| RANDOM = urand.read(1024)}
  def wipe
    log << "disk wipe started..."
    total = 0
    log << ""
    drive = open("/dev/#{dev}", "w")
    until drive.closed?
      begin
        written = drive.write(ZEROS)
        total += written
        log[-1] = "#{(total.to_i * 100) / (2 * size.to_i)}% of wipe complete"
        if @status == FAILED or written < ZEROS.length
          drive.close
        end
      rescue Errno::ENOSPC => e
        drive close
      end
    end
    drive = open("/dev/#{dev}", "w")
    until drive.closed?
      begin
        written = drive.write(RANDOM)
        total += written
        log[-1] = "#{(total.to_i * 100) / (2 * size.to_i)}% of wipe complete"
        if @status == FAILED or written < RANDOM.length
          drive.close
        end
      rescue Errno::ENOSPC => e
        drive close
      end
    end
    log << "disk wipe finished"
    return @status != FAILED
  rescue Exception => e
    log << e
    @status = FAILED
    return false
  ensure
    drive.close
  end

  def output_display
    highlight(dev + ": ")
    echo(status + " - " + time_taken)
  end

  def time_taken
    if @started
      if @finished
        duration = @finished - @started
      else
        duration = Time.new - @started
      end
      "#{duration} seconds"
    else
      "(no time has been recorded yet)"
    end
  end

  def status
    case @status
    when PASSED 
      "all tests passed: #{log.to_yaml}"
    when FAILED
      "failed: #{log.to_yaml}"
    when UNTESTED
      log.last
    end
  end

  def passed?
    @status == PASSED
  end

  def failed?
    @status == FAILED
  end

  Err_re = /error/
  def klog_match?(line)
    Err_re.match(line) and
      /#{@dev}/.match(line)
  end

  def klog(*msgs)
    msgs.each do |msg|
      if klog_match?(msg)
        @status = FAILED
        #:MC: ugly handling of continuously updating progress log entry
        curr = log[-1]
        log[-1] = msg
        log << curr
      end
    end
  end

end

if __FILE__ == $0
  require 'optparse'
  trap( "SIGINT" ) do
    errorMessage "\n\nUser interrupt caught.  Exiting.\n\n"
    exit!( 1 )
  end
  begin
    # :TODO: check that i'm root
    logpipe = "/tmp/klog"
    logconf = "/tmp/syslog.conf"
    `mkfifo #{logpipe}`
    open(logconf, 'w') {|conf|
      conf.puts "*.* |#{logpipe}"
      #conf.puts "*.* /dev/console"
    }
    `/usr/sbin/invoke-rc.d sysklogd stop`
    `/sbin/syslogd -f #{logconf}`
    klpid, klin, klout, klerr = open4("tail -F #{logpipe}")
    loglines = []
    drives = HardDrive.scan
    threads = drives.map {|drive| drive.run_tests}
    clearer = `clear`
    until threads.empty?
      if select([klout],nil,nil,0.1)
        loglines += klout.read_nonblock(1000).split("\n")
      end
      drives.each {|d|
        d.klog(*(loglines.delete_if {|l| d.klog_match?(l)}))
        d.output_display
      }
      loglines.clear
      threads = threads.find_all {|t|
        t.alive? 
      }
      sleep 1
      $stderr.write(clearer)
      $stderr.flush
    end
  ensure
    header "Final status:"
    drives.each {|d| 
      d.output_display
      if d.passed?
        puts colored( "#{d.dev} passed!  Label and store it.", 'green', 'bold' )
      elsif d.failed?
        errorMessage "#{d.dev} failed.  Recycle it.\n"
      else
        errorMessage "#{d.dev} did not finish testing.  Seek expert attention."
      end
    }
  end
end
